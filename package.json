{
  "name": "editorconfig",
  "version": "0.15.3",
  "description": "EditorConfig File Locator and Interpreter for Node.js",
  "keywords": [
    "editorconfig",
    "core"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "contributors": [
    "Hong Xu (topbug.net)",
    "Jed Mao (https://github.com/jedmao/)",
    "Trey Hunner (http://treyhunner.com)"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc",
    "postbuild": "rimraf dist/package.json && cpy dist/src/* dist && rimraf dist/src",
    "pretest": "npm run build && npm run copy && cmake .",
    "test": "npm run lint && npm run mocha && ctest .",
    "pretest:ci": "npm run pretest",
    "test:ci": "npm run lint && npm run mocha && ctest -VV --output-on-failure .",
    "lint": "npm run eclint && npm run tslint",
    "eclint": "eclint check --indent_size ignore \"src/**\"",
    "tslint": "tslint --project tsconfig.json --exclude package.json",
    "mocha": "ts-mocha -p tsconfig.json src/**/*.test.ts",
    "copy": "cpy bin/* dist/bin && cpy src/lib/fnmatch*.* dist/src/lib",
    "prepub": "npm run lint && npm run build && npm run copy",
    "pub": "npm publish"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/editorconfig/editorconfig-core-js.git"
  },
  "bugs": "https://github.com/editorconfig/editorconfig-core-js/issues",
  "author": "EditorConfig Team",
  "license": "MIT",
  "dependencies": {
    "@jedmao/ini-parser": "^0.2.4",
    "@types/node": "^12.11.5",
    "@types/semver": "^6.0.2",
    "commander": "^3.0.2",
    "lru-cache": "^5.1.1",
    "semver": "^6.3.0",
    "sigmund": "^1.0.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.4",
    "@types/expect": "^1.20.4",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.11.5",
    "@types/semver": "^6.0.2",
    "chai": "^4.2.0",
    "commander": "^3.0.2",
    "cpy-cli": "^2.0.0",
    "eclint": "^2.8.1",
    "lru-cache": "^5.1.1",
    "mocha": "^6.2.2",
    "rimraf": "^3.0.0",
    "semver": "^6.3.0",
    "should": "^13.2.3",
    "sigmund": "^1.0.1",
    "ts-mocha": "^6.0.0",
    "tslib": "^1.10.0",
    "tslint": "^5.20.0",
    "typescript": "^3.6.4"
  }
}
